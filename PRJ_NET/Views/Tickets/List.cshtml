@model List<PRJ_NET.Models.Entities.Ticket>


<h1>View Tickets</h1>

<div class="card-body pt-4 pb-4 pl-2 pr-2">
    <div class="row">
        <div class="col-4 ml-4">
            <h1 class="mb-4">Transport</h1>
        </div>
        <div class="col-7 mt-2">
            <div class="input-group">
                <input type="text" class="form-control input-text" placeholder="Search products...." aria-label="Recipient's username" aria-describedby="basic-addon2">
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table id="ShowticketsTable" class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Car Name</th>
                    <th scope="col">D City</th>
                    <th scope="col">A City</th>
                    <th scope="col">D Time</th>
                    <th scope="col">A Time</th>
                    <th scope="col">Price</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var conter = 0;
                }
                @if (Model != null)
                {
                    @foreach (var ticket in Model)
                    {
                        conter++;
                        <tr>
                            <td><strong>@conter</strong></td>
                            <td>@ticket.TransportName</td>
                            <td>@ticket.DepartureCity</td>
                            <td>@ticket.ArrivalCity</td>
                            <td>@ticket.DepartureTime</td>
                            <td>@ticket.ArrivalTime</td>
                            <td>@ticket.TicketPrice</td>
                            <td>
                                <div class="row">
                                    <input type="hidden" name="ticketId" value="@ticket.TicketId" />
                                    <form method="post" class="col-4">
                                        <!-- Html.AntiForgeryToken()
                                         <input type="hidden" name="handler" value="DeleteTicket" />
                                        -->
                                        <input type="hidden" name="ticketId" value="@ticket.TicketId" />
                                        <button type="submit" class="btn btn-danger rounded-2 p-1 mr-1" style="width: 35px; height: 35px;">
                                            <img src="./images/delete.png" style="width: 22px; display: block; margin: auto;">
                                        </button>
                                    </form>
                                    <div class="col-4">
                                        <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@ticket.TicketId" class="btn btn-orange rounded-2 p-1" onclick="getInfo(this)" style="width: 35px; height: 35px;">
                                            <!--<img src="./images/refresh.png" style="width: 22px; display: block; margin: auto;">-->
                                            Edit
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
